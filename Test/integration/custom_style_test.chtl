[Custom] @Style BaseButton
{
    border: "1px solid black";
    padding: "10px";
    background-color;
}

body
{
    // Test 1: Provide value for valueless property
    button
    {
        id: "button1";
        style
        {
            @Style BaseButton
            {
                background-color: "blue";
            }
        }
    }

    // Test 2: Delete a property
    button
    {
        id: "button2";
        style
        {
            @Style BaseButton
            {
                delete border;
                background-color: "red";
            }
        }
    }

    // Test 3: Override a property
    button
    {
        id: "button3";
        style
        {
            @Style BaseButton
            {
                padding: "20px";
                background-color: "green";
            }
        }
    }
}