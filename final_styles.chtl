// This file defines a style template to be imported.
// The loader will place this content in the 'final_styles' namespace by default.

[Template] @Var Sizing {
    base-unit: 8px;
    border-radius: 4px;
}

[Template] @Style Button {
    padding: Sizing(base-unit);
    border-radius: Sizing(border-radius);
    border: 1px-solid-#ccc;
    font-size: 16px;
}