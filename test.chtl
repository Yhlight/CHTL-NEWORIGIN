[Configuration]
{
    DEBUG_MODE = false;
}

[Namespace] TestSpace {
    // CHTL Template Test File

    [Custom] @Style TextSet
    {
        color;
        font-size;
    }

    [Template] @Style DefaultText
    {
        color: black;
        line-height: 1.6;
    }

    [Template] @Element Box
    {
        span
        {
            text: "This is from an element template.";
        }
    }


    html {
        head {
            title { text: "CHTL Template Test"; }
        }

        body {
            div {
                class: "styled-div";
                @Style DefaultText;
                text: "This div uses a style template. ";
            }

            div {
                class: "element-container";
                @Element Box;
            }
        }
    }
}
