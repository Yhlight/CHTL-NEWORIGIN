[Import] @Chtl from "theme.chtl";

[Template] @Element MyBox {
    div {
        class: "box-from-template";
        h2 { text { "This is a box." } }
        p { text { "It comes from an Element Template." } }
    }
}

html {
    body {
        style {
            @Style BaseStyles;
            background-color: ThemeColors(primary);
            color: ThemeColors(primary-text);
        }

        h1 { text { "Variable Templates are cool!" } }

        @Element MyBox;
    }
}
