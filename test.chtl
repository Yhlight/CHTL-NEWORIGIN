use html5;

[Import] @Chtl from "imports/header.chtl";

[Configuration]
{
    DEBUG_MODE = false;
}

[Configuration]
{
    DEBUG_MODE = false;
}

[Template] @Var ThemeColor
{
    main_color: "rgb(255, 192, 203)";
    secondary_color: "black";
}

[Namespace] Shared {
    [Template] @Element Footer {
        div { text: "Shared Footer"; }
    }
}

[Namespace] TestSpace {
    // CHTL Template Test File

    [Custom] @Style TextSet
    {
        color;
        font-size;
    }

[Custom] @Style BaseTheme
{
    font-family: Arial;
    font-size: 16px;
    color: red;
}

    [Template] @Style DefaultText
    {
    @Style BaseTheme;
	color: ThemeColor(secondary_color);
        line-height: 1.6;
    width: 100px + 50px * 2;
    }

    [Template] @Element Box
    {
        span
        {
            text: "This is from an element template.";
        }
    }


    html {
        head {
            title { text: "CHTL Template Test"; }
        }

        body {
            div {
                class: "custom-styled-div";
                @Style TextSet {
                    color: blue;
                    font-size: 20px;
                }
                text: "This div uses a custom style template. ";
            }

            div {
                class: "element-container";
                @Element Box;
            }

            div {
                class: "expr-div";
                @Style DefaultText;
                text: "This div tests expressions.";
            }

            @Element Header;

            div {
                class: "delete-div";
                @Style BaseTheme {
                    delete color;
                }
                text: "This div tests deletion.";
            }

            div {
                id: "ref-target";
                style { width: 300px; }
            }

            div {
                class: "ref-user";
                style {
                    width: #ref-target.width / 2;
                }
            }

            @Element Footer from Shared;
        }
    }
}
