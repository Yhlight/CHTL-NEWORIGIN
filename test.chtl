html {
    head {
        title {
            text: "My CHTL Page";
        }
    }
    body {
        div {
            id: main-content;
            class: "container";

            h1 {
                style {
                    color: red;
                    font-size: 12px * 2;
                }
                text: "Welcome to CHTL!";
            }

            p {
                style {
                    .highlight {
                        font-weight: bold;
                    }
                }
                class: "highlight";
                text {
                    "This is a paragraph generated from CHTL source."
                }
            }

            button {
                style {
                    .btn {
                        padding: 10px;
                        border-radius: 5px;
                    }
                    background-color: blue;
                }
                text: "Click Me";
            }
        }
    }
}
